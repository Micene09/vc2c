{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es2015",
      "dom"
    ],
    "declaration": true,
    "declarationDir": "./dist/types/",
    "sourceMap": true,
    "outDir": "./dist/lib",
    "strict": true,
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "paths": {
    "@/*": [ "src/*" ]
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
